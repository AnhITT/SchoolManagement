@using Microsoft.AspNetCore.Identity
@using SchoolManagement.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="nav-link text-dark">Xin chào @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="User" asp-action="Logout">
            <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Đăng nhập</a>
    </li>
}
</ul>
