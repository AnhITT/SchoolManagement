<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/faviconicon.ico")" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/css/app-modern.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>

</head>
<body class="loading" data-layout="detached">

    <!-- Topbar Start -->
    <div class="navbar-custom topnav-navbar topnav-navbar-dark">
        <div class="container-fluid">


            <a style="margin-left: 115px" href="/Admin/Admin/Index" class="topnav-logo">
                <span class="topnav-logo-lg">
                    <img src="~/Content/faviconn.ico" alt="" height="50">
                </span>
                <span class="topnav-logo-sm">
                    <img src="~/Content/faviconn.ico" alt="" height="50">
                </span>
            </a>


            <ul class="list-unstyled topbar-menu float-end mb-0">
                <li class="dropdown notification-list">
                    <a class="nav-link dropdown-toggle nav-user arrow-none me-0" data-bs-toggle="dropdown" id="topbar-userdrop" href="#" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        <span class="account-user-avatar">
                            <img src="~/image/avarta/avatar-default.png" alt="user-image" class="rounded-circle">
                        </span>
                        <span>
                            <span class="account-user-name">
                                @User.Identity.Name
                            </span>
                            <span class="account-position">
                                Admin
                            </span>
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated topbar-dropdown-menu profile-dropdown" aria-labelledby="topbar-userdrop">
                        <!-- item-->
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Welcome !</h6>
                        </div>

                        <!-- item-->
                        <a asp-action="DisplayInfoUser" asp-controller="User" class="dropdown-item notify-item">
                            <i class="mdi mdi-account-circle me-1"></i>
                            <span>Thông tin cá nhân</span>
                        </a>

                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item notify-item">
                            <i class="mdi mdi-account-edit me-1"></i>
                            <span>Cài đặt</span>
                        </a>

                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item notify-item">
                            <i class="mdi mdi-lifebuoy me-1"></i>
                            <span>Hỗ trợ</span>
                        </a>


                        <!-- item-->
                        <a asp-controller="User" asp-action="Logout" class="dropdown-item notify-item">
                            <i class="mdi mdi-logout me-1"></i>
                            <span>Đăng xuất</span>
                        </a>
                    </div>
                </li>
            </ul>
            <a class="button-menu-mobile disable-btn">
                <div class="lines">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </a>

        </div>
    </div>
    <!-- end Topbar -->
    <!-- Start Content-->
    <div class="container-fluid">

        <!-- Begin page -->
        <div class="wrapper">

            <!-- ========== Left Sidebar Start ========== -->
            <div class="leftside-menu leftside-menu-detached">

                <div class="leftbar-user">
                    <a asp-action="DisplayInfoUser" asp-controller="User">
                        <img src="~/image/avarta/avatar-default.png" alt="user-image" height="42" class="rounded-circle shadow-sm">
                        <span class="leftbar-user-name">
                            @User.Identity.Name
                        </span>
                    </a>
                </div>

                <!--- Sidemenu -->
                <ul class="side-nav">

                    <li class="side-nav-title side-nav-item">Navigation</li>

                    <li class="side-nav-item">
                        <a asp-controller="Home" asp-action="Dashboard" class="side-nav-link">
                            <i class="uil-home-alt"></i>
                            <span> Trang chủ </span>
                        </a>
                    </li>

                    <li class="side-nav-item">
                        <a asp-controller="Actor" asp-action="QLActor" class="side-nav-link">
                            <i class="fa-solid fa-user-secret"></i>
                            <span> Quản lý sinh viên</span>
                        </a>
                    </li>
                    <li class="side-nav-item">
                        <a asp-controller="Pricing" asp-action="QLPricing" class="side-nav-link">
                            <i class="fa-brands fa-servicestack"></i>
                            <span> Quản lý lớp học </span>
                        </a>
                    </li>
                    <li class="side-nav-item">
                        <a asp-controller="Pricing" asp-action="QLUserPricing" class="side-nav-link">
                            <i class="fa-solid fa-business-time"></i>
                            <span> Quản lý môn học </span>
                        </a>
                    </li>
                    <li class="side-nav-item">
                        <a asp-controller="User" asp-action="QLAccount" class="side-nav-link">
                            <i class="uil-users-alt"></i>
                            <span> Quản lý tài khoản </span>
                        </a>
                    </li>

                    <!--

                        <li class="side-nav-item">
                        <a href="/Admin/QLVoucher/QLVoucher" class="side-nav-link">
                            <i class="fa-solid fa-gift"></i>
                            <span> Quản lý voucher </span>
                        </a>
                    </li>
                        -->



                </ul>


                <!-- End Sidebar -->

                <div class="clearfix"></div>
                <!-- Sidebar -left -->

            </div>
            <!-- Left Sidebar End -->

            <div class="content-page">
                <div class="content">
                    <!-- start page title -->
                    <!-- end page title -->
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <!-- END Container -->
            <!-- bundle -->
            <script src="~/assets/js/vendor.min.js"></script>
            <script src="~/assets/js/app.min.js"></script>

            <!-- third party js -->
            <script src="~/assets/js/vendor/apexcharts.min.js">    </script>
            <script src="~/assets/js/vendor/jquery-jvectormap-1.2.2.min.js"></script>
            <script src="~/Content/assets/js/vendor/jquery-jvectormap-world-mill-en.js"></script>
            <!-- third party js ends -->
            <!-- demo app -->
            <script src="~/assets/js/pages/demo.dashboard.js"></script>
            <!-- end demo js-->
            <style>
                a {
                    text-decoration: none !important;
                }
            </style>
            @RenderSection("scripts", required: false)


</body>

</html>
