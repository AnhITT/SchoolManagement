@model SchoolManagement.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Tạo tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5">
            <a asp-action="Index">
                <i class="fas fa-users"></i> Quản lý tài khoản
            </a>
        </li>
        <li class="breadcrumb-item h5">Tạo tài khoản</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center mb-4">Tạo tài khoản mới</h2>
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role"></label>
                        <select asp-for="Role" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Roles, "Name", "Name"))">
                            <option value="">-- Chọn vai trò --</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center align-items-center">
                        <a class="btn btn-dark" asp-action="Index">
                            <i class="fa-solid fa-chevron-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success m-3">Tạo tài khoản</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 