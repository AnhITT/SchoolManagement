@model SchoolManagement.Models.User
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="m-profile manage-p mb-5">
    <div class="container h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-lg-10">
                <div class="sign-user_card">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="upload_profile d-inline-block">
                                <img src="~/image/user/user.jpg" class="profile-pic rounded-circle img-fluid" alt="user">
                                <div class="p-image">
                                    <i class="ri-pencil-line upload-button"></i>
                                    <input class="file-upload" type="file" accept="image/*">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-10 device-margin">
                            <div class="profile-from">
                                <h4 class="mb-3">Manage Profile</h4>
                                <form asp-action="EditInfoUser" method="post" class="mt-4">
                                    <div class="form-group">
                                        <label>UserName</label>
                                        <input type="text" class="mb-0"
                                    </div>
                                    <div class="form-group">
                                        <label>Full Name</label>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                    </div>
                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        <input type="date" class="date-input basicFlatpickr mb-0"
                                    </div>
                                    @if (TempData["msg"] != null)
                                    {
                                        <div class="alert text-danger">
                                            @TempData["msg"]
                                        </div>
                                    }
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" href="#" class="btn btn-hover m-3">Save</button>
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-link m-3">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>