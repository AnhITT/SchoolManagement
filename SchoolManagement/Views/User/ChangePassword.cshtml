@model SchoolManagement.Models.DTO.CheckPasswordDTO
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="m-profile setting-wrapper">
    <div class="container">
        <h4 class="main-title mb-4 text-center">Change Password</h4>
        <div class="row">
            <div class="col-lg-4 mb-3">
                <div class="sign-user_card text-center">
                    <img src="~/image/user/user.jpg" class="rounded-circle img-fluid d-block mx-auto mb-3" alt="user">
                    <h4 class="mb-3">@Model.name</h4>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="sign-user_card">
                    <h5 class="mb-3 pb-3 a-border">Change Password</h5>
                    <form asp-action="ChangePassword" method="post" class="mt-4">
                        <input type="hidden" asp-for="@Model.id" />
                        <input type="hidden" asp-for="@Model.name" />

                        <div class="form-group">
                            <label>Old Password</label>
                            <span class="text-danger" asp-validation-for="password"></span>
                            <input type="password" class="mb-0"
                                   asp-for="@Model.password" placeholder="******">
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <span class="text-danger" asp-validation-for="newPassword"></span>
                            <input type="password" class="mb-0"
                                   asp-for="@Model.newPassword" placeholder="******">
                        </div>
                        <div class="form-group">
                            <label>Repeat Password</label>
                            <span class="text-danger" asp-validation-for="repeatPassword"></span>
                            <input type="password" class="mb-0"
                                   asp-for="@Model.repeatPassword" placeholder="******">
                        </div>
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert text-danger">
                                @TempData["msg"]
                            </div>
                        }
                        @if (TempData["true"] != null)
                        {
                            <div class="alert text-success">
                                @TempData["true"]
                            </div>
                        }
                        <div class="d-flex justify-content-center">
                            <button type="submit" href="#" class="btn btn-hover m-3">Save</button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-link m-3">Cancel</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>