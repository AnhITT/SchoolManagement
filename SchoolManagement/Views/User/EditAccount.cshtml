@model SchoolManagement.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5">
            <a asp-controller="User" asp-action="QLAccount">
                <i class="uil-users-alt"></i> Quản lý tài khoản
            </a>
        </li>
        <li class="breadcrumb-item h5">Chỉnh sửa tài khoản</li>
    </ol>
</nav>
<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center ">Chỉnh sửa tài khoản</h2>
                            <form asp-action="EditAccount" method="post">
                                <input type="hidden" asp-for="@Model.Id" />
                                <div>
                                    Username
                                    <div>
                                    </div>
                                </div>
                                <div>
                                    Full Name
                                    <div>
                                    </div>
                                </div>
                                <div>
                                    Email
                                    <div>
                                    </div>
                                </div>
                                <div>
                                    Dath Birthday
                                    <div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" asp-controller="User" asp-action="QLAccount"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Chỉnh sửa tài khoản" class="btn btn-success m-3" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
