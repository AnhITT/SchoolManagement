@{
    var actor = ViewBag.nameActor;
}
@{
    ViewData["Title"] = "Danh sách phim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5">
            <a asp-controller="Actor" asp-action="QLActor">
                <i class="fa-solid fa-user-secret"></i> Quản lý diễn viên
            </a>
        </li>
        <li class="breadcrumb-item h5">Danh sách phim thuộc diễn viên @actor</li>
    </ol>
</nav>
<section style="padding-top: 30px" class="content">
