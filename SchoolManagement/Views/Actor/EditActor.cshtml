@{
    ViewData["Title"] = "Chỉnh sửa diễn viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item h5">
            <a asp-controller="Actor" asp-action="QLActor">
                <i class="fa-solid fa-user-secret"></i> Quản lý diễn viên
            </a>
        </li>
        <li class="breadcrumb-item h5">Chỉnh sửa diễn viên</li>
    </ol>
</nav>
<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center ">Chỉnh sửa diễn viên</h2>
                            <form asp-action="EditActor" method="post">
                                <div>
                                    ID
                                    <div>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                </div>
                                <div>
                                    Nhập tên diễn phim
                                    <div>
                                        <input type="text" class="form-control" >
                                    </div>
                                </div>
                                <div>
                                    Nhập mô tả diễn viên
                                    <div>
                                        <input type="text" class="form-control" >
                                    </div>
                                </div>
                                <div>
                                    Nhập ảnh đại diện
                                    <div>
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" asp-controller="Actor" asp-action="QLActor"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Chỉnh sửa diễn viên" class="btn btn-success m-3" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
