
@{
    ViewData["Title"] = "Danh sách diễn viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section style="padding-top: 30px" class="content">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Danh sách diễn viên</h2>
            <div class="card-tools">
                <a asp-controller="Actor" asp-action="AddActor" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên diễn viên</th>
                        <th>Ảnh đại diện</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>

        </div>
    </div>
</section>

